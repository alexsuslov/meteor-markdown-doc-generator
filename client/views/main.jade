template(name='main')
  {{{content}}}

template(name='pages')
  .container-fluid
    .row-fluid
      .span12
      {{> navbar}}
    .row-fluid
      .span12
        .control-group
          input#filter.input-xlarge.span2.search-query(type="text",value='{{filter}}')
        ul.unstyled {{#each list}}
          li.control-group
            a.edit(href='/ed/{{_id}}') {{name}}({{user owner}})
            //- a.btn.pull-right.rm(href='#')
            //-   i.icon-remove
          {{/each}}
    {{> pagination}}
    {{> footer}}

template(name = 'pagination')
  .row-fluid
    .span12
      .pagination
        ul {{#each pgn}}
          li
            a.btn(href="/pages/{{this}}") {{this}}
          | {{/each}}
