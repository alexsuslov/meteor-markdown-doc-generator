template( name='view')
  .container-fluid
    {{> navbar}}
    {{#if owned}}
    a.btn(href='/edit/{{owned}}') Редактировать
    a.btn(href='/md/{{owned}}') MD
    {{/if}}
    .row-fluid
      .span12
        {{{content}}}
    {{> footer}}

template( name='md')
  .container-fluid
    {{> navbar}}
    .row-fluid
      .span12
        pre {{content}}
    {{> footer}}